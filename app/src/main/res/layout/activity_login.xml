<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_content"
    android:orientation="vertical"
    tools:context=".login.LoginActivity">

    <!-- Email Label -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="36.9dp"
        android:layout_marginRight="46.9dp"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/edittext_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.2dp"
            android:layout_weight="8"
            android:hint="이메일을 입력하세요."
            android:inputType="textEmailAddress"
            android:textColor="@android:color/background_dark"
            android:textColorHint="#F0F0F0" />
    </LinearLayout>

    <!-- Password Label -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="36.9dp"
        android:layout_marginRight="46.9dp"
        android:gravity="center">

        <EditText
            android:id="@+id/edittext_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.2dp"
            android:hint="비밀번호를 입력하세요."
            android:inputType="textPassword"
            android:textColor="@android:color/background_dark"
            android:textColorHint="#F0F0F0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:weightSum="100"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/imagebutton_login_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_weight="20"
            android:text="로그인" />

        <Button
            android:id="@+id/imagebutton_login_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23.28dp"
            android:layout_marginRight="42dp"
            android:layout_weight="20"
            android:text="회원가입" />

    </LinearLayout>

</LinearLayout>